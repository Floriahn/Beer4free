import java.sql.Date;
import java.text.ParseException;
import java.text.SimpleDateFormat;

public class Gast{
	
	private String id;
	private String nachname;
	private String gebdat;
	private String plz;
	private String land;
	private String hausnmr;
	
	private String number;
	private String name;
	
	private String insert = "INSERT INTO gast (nachname, geburtsdatum, plz, land, hausnummer";
	
	public Gast(String nachname, String gebdat, String plz, String land, String hausnmr, String number, String name){
		this.nachname = nachname;
		this.gebdat = gebdat;
		this.plz = plz;
		this.land = land;
		this.hausnmr = hausnmr;
		this.number = number;
		this.name = name;
	}
	
	public Gast(){
		
	}
	
	public String getInsertString(){
		int x =0;
		if (number != null){
			insert += ", telefonnummer";
			x++;
		}
		if (name != null){
			insert += ", name";
			x++;
		}

		insert += ") VALUES(?, ?, ?, ?, ?";
		for(int i=0;i<=x;i++){
			insert += ", ?";
		}
		
		insert += ")";
		
		return insert;
	}
	
	//Setters
	public void setName(String name) {
		this.name = name;
	}
	public void setNachname(String nachname) {
		this.nachname = nachname;
	}
	public void setGebdat(String gebdat) {
		this.gebdat = gebdat;
	}
	public void setNumber(String number) {
		this.number = number;
	}
	public void setPlz(String plz) {
		this.plz = plz;
	}
	public void setLand(String land) {
		this.land = land;
	}
	public void setHausnmr(String hausnmr) {
		this.hausnmr = hausnmr;
	}
	
	//Getters
	public String getId() {
		return id;
	}
	public String getName() {
		return name;
	}
	public String getNachname() {
		return nachname;
	}
	public Date getGebdat() {
		String sDat = gebdat;
		SimpleDateFormat sdf = new SimpleDateFormat("dd-MM-yyyy");
		java.util.Date date;
		try {
			date = sdf.parse(sDat);
			java.sql.Date sqldate = new java.sql.Date(date.getTime());
			return sqldate;
		} catch (ParseException e) {
			e.printStackTrace();
			return null;
		}
	}
	public String getNumber() {
		return number;
	}
	public String getPlz() {
		return plz;
	}
	public String getLand() {
		return land;
	}
	public String getHausnmr() {
		return hausnmr;
	}
	
}
